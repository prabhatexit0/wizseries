{
  "name": "react-cpp20-wasm",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "wasm:configure": "emcmake cmake -S cpp -B build -DCMAKE_BUILD_TYPE=Release",
    "wasm:build": "cmake --build build --parallel",
    "wasm:clean": "rm -rf build src/wasm/engine.*",
    "wasm:rebuild": "npm run wasm:clean && npm run wasm:configure && npm run wasm:build",
    "setup": "npm install && npm run wasm:configure && npm run wasm:build",
    "lint": "eslint ."
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.564.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.18.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "typescript": "~5.7.0",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.1.0"
  }
}
